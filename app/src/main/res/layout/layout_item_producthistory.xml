<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_producthistory"
    android:layout_width="match_parent"
    android:layout_height="@dimen/min_height_57dp"
    android:layout_marginTop="@dimen/margin_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:drawablePadding="@dimen/pading_10dp"
            android:gravity="center"
            android:text="@string/itemproducthistory_tv_deleted"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_trash_24px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_producthistory_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_producthistory_tv_productname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/item_producthistory_tv_productkey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_producthistory_tv_usetime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/item_producthistory_tv_updatetime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/item_producthistory_tv_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_weight="2.7"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            app:drawableStartCompat="@drawable/final_state_24px_yellow" />
    </LinearLayout>

</FrameLayout>