<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_lake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/itemlake_layout_ma"
            android:layout_width="@dimen/width_70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemlake_tv_ma"
                android:layout_width="@dimen/width_80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/teal_700"
                android:textSize="@dimen/text_size_26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemlake_tv_trangthai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/itemlake_layout_ma"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/itemlake_tv_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_below="@+id/itemlake_tv_ten"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemlake_tv_ngaytao"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="italic"
                        app:drawableStartCompat="@drawable/ic_create_24px" />

                    <TextView
                        android:id="@+id/itemlake_tv_chiphi"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="italic"
                        app:drawableStartCompat="@drawable/ic_dollar_24px" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemlake_tv_ph"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_18sp"
                    app:drawableStartCompat="@drawable/ic_sodium_24px" />

                <TextView
                    android:id="@+id/itemlake_tv_oxy"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/teal_700"
                    android:textSize="@dimen/text_size_18sp"
                    app:drawableStartCompat="@drawable/ic_oxygen_24px" />

                <TextView
                    android:id="@+id/itemlake_tv_doman"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_18sp"
                    app:drawableStartCompat="@drawable/ic_fraction_24px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>