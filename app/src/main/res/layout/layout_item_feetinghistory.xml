<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/pading_5dp">

    <LinearLayout
        android:id="@+id/item_eatinghistory_background"
        android:padding="@dimen/pading_5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:drawablePadding="@dimen/pading_10dp"
            android:gravity="center"
            android:text="@string/itemeatinghistory_tv_deleted"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_trash_24px" />

    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/pading_5dp"
        android:baselineAligned="false"
        android:id="@+id/item_eatinghistory_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemeatinghistory_tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:drawablePadding="@dimen/margin_5dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                app:drawableStartCompat="@drawable/ic_final_state_24px" />

            <TextView
                android:id="@+id/itemeatinghistory_tv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_5dp"
                android:drawablePadding="@dimen/margin_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                app:drawableStartCompat="@drawable/ic_flour_24px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemeatinghistory_tv_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:drawablePadding="@dimen/pading_5dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                app:drawableStartCompat="@drawable/ic_chart_24px" />

            <TextView
                android:id="@+id/itemeatinghistory_tv_thoigianchoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/pading_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                app:drawableStartCompat="@drawable/ic_create_24px" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>