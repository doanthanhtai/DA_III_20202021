<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_5dp"
    android:paddingStart="@dimen/pading_5dp"
    android:paddingEnd="@dimen/pading_5dp"
    android:layout_height="@dimen/min_height_48dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:drawablePadding="@dimen/pading_10dp"
            android:gravity="center"
            android:text="@string/itemotherusehistory_tv_deleted"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_trash_24px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_environmenthistory_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_environmenthistory_tv_ph"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_18sp"
            app:drawableStartCompat="@drawable/ic_sodium_24px" />


        <TextView
            android:id="@+id/item_environmenthistory_tv_oxy"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/text_size_18sp"
            app:drawableStartCompat="@drawable/ic_oxygen_24px" />

        <TextView
            android:id="@+id/item_environmenthistory_tv_salinity"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_18sp"
            app:drawableStartCompat="@drawable/ic_fraction_24px" />
        <TextView
            android:id="@+id/item_environmenthistory_tv_time"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="@dimen/text_size_18sp"/>
    </LinearLayout>

</FrameLayout>