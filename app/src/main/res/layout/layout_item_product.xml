<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/pading_5dp">

        <TextView
            android:id="@+id/itemproduct_tv_masp"
            android:layout_width="@dimen/layout_width_80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/itemproduct_img_enter"
            android:layout_toEndOf="@+id/itemproduct_tv_masp"
            android:orientation="vertical"
            android:padding="@dimen/pading_10dp">

            <TextView
                android:id="@+id/itemproduct_tv_tensp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemproduct_tv_tenncc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="italic"
                    app:drawableStartCompat="@drawable/ic_supplier_14px" />

                <TextView
                    android:id="@+id/itemproduct_tv_gianhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="italic"
                    app:drawableStartCompat="@drawable/ic_dollar_14px" />

                <TextView
                    android:id="@+id/itemproduct_tv_tonkho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_10sp"
                    android:textStyle="italic"
                    app:drawableStartCompat="@drawable/ic_store_house_14px" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/itemproduct_img_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:contentDescription="@null"
            android:src="@drawable/ic_enter_48px" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>