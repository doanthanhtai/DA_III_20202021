<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/pading_10dp"
    tools:context=".SignUpAcitivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_textview_title"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/text_size_26sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/bc_rectangle_white_radius50dp_1dp_black_orange_focused"
            android:drawableStart="@drawable/all_custom_email_icon_24"
            android:drawablePadding="@dimen/pading_10dp"
            android:hint="@string/all_email_hint"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="@dimen/pading_20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:autofillHints="password"
            android:background="@drawable/bc_rectangle_white_radius50dp_1dp_black_orange_focused"
            android:drawableStart="@drawable/all_custom_lock_icon_24"
            android:drawablePadding="@dimen/pading_10dp"
            android:hint="@string/all_password_hint"
            android:inputType="numberPassword"
            android:minHeight="48dp"
            android:padding="@dimen/pading_20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_til_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:autofillHints="password"
            android:background="@drawable/bc_rectangle_white_radius50dp_1dp_black_orange_focused"
            android:drawableStart="@drawable/all_custom_lock_icon_24"
            android:drawablePadding="@dimen/pading_10dp"
            android:hint="@string/all_confirm_password_hint"
            android:inputType="numberPassword"
            android:minHeight="48dp"
            android:padding="@dimen/pading_20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signup_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/bc_rectangle_teal700_radius50dp_1dp_teal700"
        android:text="@string/signup_button_signup_text"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/signup_layout_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/pading_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_textview_hadaccount"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:text="@string/signup_textview_signin"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>

</LinearLayout>