<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EnvironmentHistoryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/environmenthistory_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/environmenthistory_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_50dp"
        android:layout_marginBottom="@dimen/margin_50dp"
        android:contentDescription="@string/itemtime_image_description"
        android:src="@drawable/ic_baseline_update_104" />
    <TextView
        android:id="@+id/environmenthistory_tv_empty"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_24sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/environmenthistoryfragmemt_tv_empty"/>

</RelativeLayout>